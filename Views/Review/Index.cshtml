@model IEnumerable<BookReviewApp_NL_S04_20.Models.Review>

@{
    ViewData["Title"] = "All Reviews";
}

<h1>All Reviews</h1>

<table id="reviewsTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Book</th>
            <th>Rating</th>
            <th>Published</th>
            <th>Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.User.UserName</td>
                <td>@review.Book.Title</td>
                <td>@review.Rating</td>
                <td>@review.PublishedDate.ToShortDateString()</td>
                <td>@review.Text</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#reviewsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 5,
                lengthMenu: [5, 10]
            });
        });
    </script>
}
