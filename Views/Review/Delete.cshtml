@model BookReviewApp_NL_S04_20.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this Review?
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>

        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Book.Title</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Text</dt>
        <dd class="col-sm-10">@Model.Text</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
