@model IEnumerable<BookReviewApp_NL_S04_20.Models.Category>

@{
    ViewData["Title"] = "Categories";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Categories</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table table-striped table-hover table-bordered align-middler">
    <thead>
        <tr>
            <th>Name</th>
            @if (isAdmin)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                @if (isAdmin)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
