@model BookReviewApp_NL_S04_20.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this Book?
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Publication Year</dt>
        <dd class="col-sm-10">@Model.PublicationYear</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
