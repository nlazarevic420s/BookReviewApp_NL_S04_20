@model BookReviewApp_NL_S04_20.Models.ViewModels.BookIndexViewModel

@{
    ViewData["Title"] = "Books";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Books</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p> 
}

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search by title or publisher..." />
        <select name="sortOrder" class="form-select">
            <option value="">Sort by Title (A-Z)</option>
            <option value="title_desc" selected="@(Model.SortOrder == "title_desc")">Title (Z-A)</option>
            <option value="year_asc" selected="@(Model.SortOrder == "year_asc")">Year ASC</option>
            <option value="year_desc" selected="@(Model.SortOrder == "year_desc")">Year DESC</option>
            <option value="rating_asc" selected="@(Model.SortOrder == "rating_asc")">Rating ASC</option>
            <option value="rating_desc" selected="@(Model.SortOrder == "rating_desc")">Rating DESC</option>
        </select>
        <button type="submit" class="btn btn-outline-primary">Apply</button>
    </div>
</form>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Publication Year</th>
            <th>Publisher</th>
            <th>Average Rating</th>
            <th>Reviews</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.PublicationYear</td>
                <td>@book.PublisherName</td>
                <td>@(book.AverageRating > 0 ? book.AverageRating.ToString("F1") : "-")</td>
                <td>@book.ReviewCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary me-2">Details</a>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-secondary me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-searchString="@Model.SearchString"
                   asp-route-sortOrder="@Model.SortOrder">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
